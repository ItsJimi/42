extends ../index.pug

mixin user
	.user
		if (user.img)
			img(src=user.img[0], style="border-right: 10px solid " + user.color + ";")
		else
			img(src="img/pp.png", style="border-right: 10px solid " + user.color + ";")
		if (user.firstname)
		.name=user.firstname
		if (user.lastname)
			.name=user.lastname
		if (user.age)
			.age=user.age + " years old"
		if (user.gender)
			.gender=user.gender
		if (user.score)
			.score=user.score + " hearts"

block content
	.slogan
		| Propulse your dreams !
	.search
		#search_bar(data-text="Search ...", contenteditable="true")
		#search_button
			include ../../public/svg/search.svg
	.page_title
		| Most popular
	section
		each user in users
			+user
