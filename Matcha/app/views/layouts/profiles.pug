extends ../index.pug

mixin user
	.user
		if (user.img)
			img(class="img", class=user.color, src=user.img[0])
		else
			img(class="img", class=user.color, src="img/pp.png")
		if (user.firstname)
			| <div class="name"> #{user.firstname}
		if (user.lastname)
			|  #{user.lastname} </div>
		if (user.age)
			.age=user.age + " years old"
		if (user.gender)
			.gender=user.gender
		if (user.score)
			.score=user.score + " hearts"
		if (user.bio)
			.bio=user.bio
		if (user.tags)
			each tag in user.tags
				.tag="#" + tag

block content
	section
		h1=page
		each user in users
			+user
